{
  "name": "hyperfy-mcp",
  "version": "1.0.0",
  "description": "MCP server for Hyperfy interactions",
  "main": "dist/server.js",
  "type": "module",
  "scripts": {
    "build": "tsc && npm run copy-assets",
    "copy-assets": "mkdir -p dist/hyperfy/core dist/lib/physx dist/hyperfy && cp -r src/hyperfy/core/* dist/hyperfy/core/ && cp -r src/lib/physx/* dist/lib/physx/ && cp src/hyperfy/*.json dist/hyperfy/ 2>/dev/null || true",
    "start": "node dist/index.js",
    "dev": "node --loader ts-node/esm src/index.ts",
    "test": "vitest",
    "test:all": "vitest run --reporter=verbose",
    "test:all-detailed": "vitest run --reporter=verbose --reporter=json --outputFile=test-results.json",
    "test:actions": "vitest run tests/test_actions_*.ts --reporter=verbose",
    "test:managers": "vitest run tests/test_manager_*.ts --reporter=verbose",
    "test:systems": "vitest run tests/test_system_*.ts --reporter=verbose",
    "test:servers": "vitest run tests/test_server*.ts --reporter=verbose",
    "test:core": "vitest run tests/test_core_*.ts --reporter=verbose",
    "test:integration": "vitest tests/test_server.ts",
    "test:watch": "vitest --watch",
    "test:quick": "vitest tests/test_server.ts --run",
    "test:debug": "vitest tests/test_server.ts --inspect-brk",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:final": "echo 'ğŸ§ª Running comprehensive test suite...' && vitest run --reporter=verbose && echo 'âœ… All tests completed!'",
    "test:esm-mcp": "echo 'ğŸ” Running ESM Import & MCP Session Tests...' && node tests/test-esm-imports.js && echo '' && node tests/test-mcp-session.js",
    "test:mcp-tools": "echo 'ğŸ› ï¸  Running comprehensive MCP tools test...' && node tests/test-mcp-tools.js",
    "test:full-integration": "echo 'ğŸš€ Running full integration test suite...' && npm run test:esm-mcp && echo '' && npm run test:mcp-tools",
    "debug:ws": "node tests/debug/ws-connection-test.js",
    "debug:hyperfy": "node tests/debug/hyperfy-connection-test.js"
  },
  "keywords": [
    "mcp",
    "fastmcp",
    "hyperfy",
    "3d",
    "virtual-world"
  ],
  "author": "Igor Lessio - Society",
  "license": "MIT",
  "dependencies": {
    "@elizaos/cli": "1.0.0-beta.52",
    "@elizaos/core": "1.0.0-beta.52",
    "@elizaos/plugin-anthropic": "1.0.0-beta.41",
    "@elizaos/plugin-openai": "1.0.0-beta.41",
    "@livekit/rtc-node": "^0.13.14",
    "@pixiv/three-vrm": "^3.4.1",
    "@types/lodash-es": "^4.17.12",
    "@types/ws": "^8.18.1",
    "dotenv": "^16.5.0",
    "fastmcp": "^2.1.3",
    "hls.js": "^1.6.2",
    "livekit-client": "^2.13.3",
    "livekit-server-sdk": "^2.13.0",
    "lodash-es": "^4.17.21",
    "moment": "^2.30.1",
    "msgpackr": "^1.11.4",
    "postprocessing": "^6.37.3",
    "ses": "^1.12.0",
    "three": "^0.176.0",
    "three-mesh-bvh": "^0.9.0",
    "uuid": "^11.1.0",
    "ws": "^8.18.2",
    "yoga-layout": "^3.2.1",
    "zod": "^3.25.30"
  },
  "devDependencies": {
    "@types/lodash-es": "^4.17.12",
    "@types/mocha": "^10.0.10",
    "@types/node": "^22.15.23",
    "@types/three": "^0.176.0",
    "@vitest/ui": "^3.1.4",
    "biome": "^0.3.3",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3",
    "vitest": "^3.1.4"
  }
}
